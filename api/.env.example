# Azure Cosmos DB
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key
COSMOS_DB_DATABASE=snaplant
COSMOS_DB_CONTAINER=plants

# Azure Blob Storage
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key;EndpointSuffix=core.windows.net
STORAGE_CONTAINER_NAME=images

# OpenAI Vision
# Option 1: OpenAI API
OPENAI_API_KEY=your-openai-api-key
# Option 2: Azure OpenAI Service（推奨）
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-vision-preview
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# バリデーション設定（オプション - デフォルト値があります）
# ファイルアップロード制限
MAX_FILE_SIZE=10485760  # 10MB in bytes

# 植物データ文字数制限
PLANT_NAME_MAX_LENGTH=100
PLANT_SCIENTIFIC_NAME_MAX_LENGTH=150
PLANT_FAMILY_NAME_MAX_LENGTH=100
PLANT_DESCRIPTION_MAX_LENGTH=1000
PLANT_CHARACTERISTICS_MAX_LENGTH=500